;call an interrupt
IAS int-handler
INT 0x08

;use a variable
JSR find-clock

;turn on the clock
SET A, 0
SET B, 90 
HWI [clock-hw]

;turn on the screen
JSR find-screen
SET A, 0
SET B, [screen-mem-loc]
HWI [screen-hw]

;Encode the character B
SET A, 66
JSR generate-char
SET B, [screen-mem-loc]
SET [B], A
SET [0xB801], A

JSR tick-wait

SET PC, end

#include util.dasm

; interrupt handler
:int-handler
RFI 0

:screen-mem-loc
dat 0xB800

:variable
dat 0x0000, 0x0000

:end
